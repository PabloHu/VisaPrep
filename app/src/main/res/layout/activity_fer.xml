<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="view.mainselection.MainSelectionActivity">

    <Button
        android:id="@+id/btnAidl"
        android:text="Aidl"
        android:onClick="userSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/btnMerchantSearch"
        android:text="Merchant Search"
        android:onClick="userSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnForeignExchange"
        android:text="Foreign Exchange"
        android:onClick="userSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>

